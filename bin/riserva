#!/usr/bin/env ruby

require 'riserva'
require 'riserva/command_line'

class RiservaExecutable
  def initialize
    ENV['RISERVA_CONFIG'] ||= Choice[:config]
  end

  def call
    case Choice[:perform]
    when 'backup' then
      Riserva::Commands::Backup.new.call
    end
  end
end

riserva = RiservaExecutable.new
riserva.call
